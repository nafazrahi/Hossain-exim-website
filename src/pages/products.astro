---
import Layout from '../layouts/layouts.astro';
import ProductCard from '../components/productcard.astro';
---
<Layout title="Products">
  <section class="py-20 bg-gray-900 text-gray-300">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold mb-4 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">Our Premium Steel Products</h2>
        <p class="text-gray-400 max-w-2xl mx-auto text-lg leading-relaxed">We import and distribute a wide range of high-quality steel products to meet the diverse needs of Bangladesh's growing construction and manufacturing sectors.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <ProductCard
          title="Mild Steel"
          description="High-quality mild steel sheets, coils, and plates for general construction and fabrication."
          price="Starting from 40000 BDT/ton"
          imageSrc="https://www.kloecknermetals.com/wp-content/uploads/2025/01/Stainless-Steel-Sheets-1024x576.jpeg"
        />
        
        <ProductCard
          title="Stainless Steel"
          description="Corrosion-resistant stainless steel available in various grades and finishes for specific applications."
          price="Price on request"
          imageSrc="https://png.pngtree.com/thumb_back/fh260/background/20231009/pngtree-3d-illustration-rolled-metal-products-featuring-stainless-steel-pipes-image_13546309.png"
        />

        <ProductCard
          title="Galvanized Steel"
          description="Zinc-coated steel products for enhanced durability and protection against rust."
          price="Starting from 45000 BDT/ton"
          imageSrc="https://joylandindustriescorp.com.ph/wp-content/uploads/2018/09/IMG_4249-1024x683.jpg"
        />

        </div>
      <div class="text-center mt-12">
        <button class="bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white font-bold py-3 px-8 rounded-full shadow-lg transition duration-300 transform hover:scale-105">View All Products</button>
      </div>
    </div>
  </section>
</Layout>