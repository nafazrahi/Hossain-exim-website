---
import Layout from '../layouts/layouts.astro';
---
<Layout title="Contact">
  <section class="py-20 bg-gray-900 text-gray-300">
    <div class="container mx-auto px-6">
      <div class="flex flex-col lg:flex-row">
        <div class="lg:w-1/2 mb-12 lg:mb-0 lg:pr-12">
          <h2 class="text-4xl md:text-5xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">Get in Touch</h2>
          <p class="text-lg text-gray-400 mb-6">Contact us for inquiries or quotes. We are happy to help you with any questions you may have.</p>
          
          <div class="space-y-4 mb-8">
            <div class="flex items-center">
              <span class="fas fa-phone-alt mr-4 text-blue-500"></span>
              <a href="tel:+8801711530373" class="text-gray-300 hover:text-blue-400 transition-colors">+880 1711530373</a>
            </div>
            <div class="flex items-center">
              <span class="fas fa-envelope mr-4 text-blue-500"></span>
              <a href="mailto:info@hossainexim.com" class="text-gray-300 hover:text-blue-400 transition-colors">info@hossainexim.com</a>
            </div>
            <div class="flex items-center">
              <span class="fas fa-fax mr-4 text-blue-500"></span>
              <span class="text-gray-300">+8801711530373</span>
            </div>
            <div class="flex items-start">
              <span class="fas fa-map-marker-alt mr-4 text-blue-500 mt-1"></span>
              <div>
                <span class="font-bold block text-white">Office Address</span>
                <span class="text-gray-400">House #88, Road #10, Bangshal, Dhaka 1212, Bangladesh</span>
              </div>
            </div>
          </div>

          <div>
            <h3 class="text-xl font-bold text-white mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-500 hover:text-blue-500 transition duration-300">
                <span class="fab fa-facebook-f text-2xl"></span>
              </a>
              <a href="#" class="text-gray-500 hover:text-blue-500 transition duration-300">
                <span class="fab fa-linkedin-in text-2xl"></span>
              </a>
              <a href="#" class="text-gray-500 hover:text-blue-500 transition duration-300">
                <span class="fab fa-twitter text-2xl"></span>
              </a>
            </div>
          </div>
        </div>
        
        <div class="lg:w-1/2">
          <div class="bg-gray-800 p-8 rounded-xl shadow-xl border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-6">Request a Quote</h3>
            <form action="https://formspree.io/f/your-id" method="POST">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div>
                  <label for="name" class="block text-gray-400 font-medium mb-2">Your Name</label>
                  <input type="text" name="name" id="name" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white" required />
                </div>
                <div>
                  <label for="email" class="block text-gray-400 font-medium mb-2">Email</label>
                  <input type="email" name="email" id="email" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white" required />
                </div>
              </div>
              <div class="mb-6">
                <label for="message" class="block text-gray-400 font-medium mb-2">Message</label>
                <textarea name="message" id="message" class="w-full px-4 py-3 bg-gray-700 border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-white" rows="5" required></textarea>
              </div>
              <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-500 hover:from-blue-600 hover:to-purple-600 text-white font-bold py-3 px-6 rounded-lg transition duration-300 transform hover:scale-105">Submit Request</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    
    <div class="h-96 mt-12">
      <iframe src="https://www.google.com/maps/embed?pb=!4v1757602098215!6m8!1m7!1s3gmFOIJPBGLL0H_0ArZ_UQ!2m2!1d23.71527643317489!2d90.41385333695871!3f2.38586!4f0!5f0.7820865974627469" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
  </section>
</Layout>