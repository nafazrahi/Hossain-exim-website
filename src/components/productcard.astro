---
const { title, description, price, imageSrc } = Astro.props;
---
<div class="bg-gray-800 rounded-xl overflow-hidden shadow-xl product-card transition duration-300 transform hover:scale-105 border border-gray-700 hover:border-blue-500">
  <div class="h-48 bg-gray-700 overflow-hidden">
    <img src={imageSrc} alt={title} class="w-full h-full object-cover transition duration-300 hover:opacity-80" loading="lazy" />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
    <p class="text-gray-400 mb-4">{description}</p>
    <div class="flex justify-between items-center">
      <span class="text-xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-500">{price}</span>
      <button class="text-blue-500 hover:text-cyan-400 font-medium transition-colors">
        Details <span class="fas fa-arrow-right ml-1"></span>
      </button>
    </div>
  </div>
</div>