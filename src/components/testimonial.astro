---
const { quote, author, role, imageSrc } = Astro.props;
---
<div class="bg-white p-8 rounded-xl shadow-md">
  <div class="flex items-center mb-4">
    <div class="text-yellow-400 mr-2">
      <span class="fas fa-star"></span>
      <span class="fas fa-star"></span>
      <span class="fas fa-star"></span>
      <span class="fas fa-star"></span>
      <span class="fas fa-star"></span>
    </div>
  </div>
  <p class="text-gray-600 mb-6">{quote}</p>
  <div class="flex items-center">
    <div class="w-12 h-12 rounded-full bg-gray-300 overflow-hidden mr-4">
      <img src={imageSrc} alt={author} class="w-full h-full object-cover" loading="lazy" />
    </div>
    <div>
      <h4 class="font-bold text-gray-800">{author}</h4>
      <p class="text-gray-600 text-sm">{role}</p>
    </div>
  </div>
</div>